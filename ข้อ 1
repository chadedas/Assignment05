#include <stdio.h>
#include <conio.h>

main()
{
	printf("\n*********Menu*********");
	printf("\n1) Banana");
	printf("\n2) Papaya");
	printf("\n3) Orange");
	printf("\n4) Exit");
	printf("\n**********************");
	printf("\n");
	printf("\nEnter choice : ");
	int select , id;
	scanf("%d",&select);
		if (select == 1)
		printf("Banana\n");
		else if (select == 2)
		printf("Papaya\n");
		else if (select == 3)
		printf("Orange\n");
			
	while (select != 4 && select <= 4 && select > 0)
	
	{
		printf("\n*********Menu*********");
		printf("\n1) Banana");
		printf("\n2) Papaya");
		printf("\n3) Orange");
		printf("\n4) Exit");
		printf("\n**********************");
		printf("\n");
		printf("\nEnter choice : ");
		scanf("%d",&id);
		
		if (id == 1)
		printf("Banana\n");
		else if (id == 2)
		printf("Papaya\n");
		else if (id == 3)
		printf("Orange\n");
		else
			break;
			
	}
	printf("\n Good bye");
	return 0;
}
